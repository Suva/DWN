doctype html
html
    head
        title Dramascreen Client
        script(src='//code.jquery.com/jquery-2.1.4.min.js')
        script(src='/javascripts/client.js')
        script(src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js")
        link(rel='stylesheet', href='//maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css')
    body
        .container
            .page-header
                h1 Dramascreen API Client

            .row
                .col-md-6
                    .panel.panel-default
                        .panel-heading
                            b Send Message
                        .panel-body
                            form
                                .form-group
                                    label(for="title") Title
                                    input.form-control#title

                                .form-group
                                    label(for="message") Message
                                    textarea.form-control#message

                                .btn-group.btn-group-justified
                                    .btn-group
                                        button.btn.btn-primary(data-level="info") Info
                                    .btn-group
                                        button.btn.btn-success(data-level="notice") Notice
                                    .btn-group
                                        button.btn.btn-warning(data-level="warning") Warning
                                    .btn-group
                                        button.btn.btn-danger(data-level="error") Drama!
                .col-md-6
                    iframe(style="height: 275px; width: 100%; border:0", src="/")
